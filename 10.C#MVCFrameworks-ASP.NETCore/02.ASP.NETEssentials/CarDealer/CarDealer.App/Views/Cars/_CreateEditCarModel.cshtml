@model CarByMake

<div class="col-md-4">
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TravelledDistance"></label>
        <input asp-for="TravelledDistance" class="form-control"/>
        <span asp-validation-for="TravelledDistance" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save Car</button>
</div>


