@model IEnumerable<CarByMake>

@{
    ViewData["Title"] = "Cars By Makes";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelling distance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <th>
                    <a href="/cars/@car.Make">@car.Make</a>
                </th>
                <th>
                    @car.Model
                </th>
                <th>
                    @car.TravelledDistance KM
                </th>
            </tr>
        }
    </tbody>
</table>

