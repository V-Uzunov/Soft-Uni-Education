@model PartsModel

<div class="col-md-4">
    <div class="form-group">
        <label asp-for="Name"></label>
        @if (Model.IsEdit)
        {
            <input asp-for="Name" required readonly class="form-control" />
        }
        else
        {
            <input asp-for="Name" required class="form-control" />
        }
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" min="1"/>
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    @if (!Model.IsEdit)
    {
        <div class="form-group">
            <label asp-for="SupplierId"></label>
            <select asp-for="SupplierId" class="form-control" asp-items="Model.Suppliers"></select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>
    }
    <button type="submit" class="btn btn-success">Save Part</button>
</div>
