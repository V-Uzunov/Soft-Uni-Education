@model IEnumerable<CourseListingViewModel>

@{
    ViewData["Title"] = "Active Courses";
}

<div class="jumbotron home-jumbotron">
    <h1 class="text-center">Welcome to our Learning System!</h1>
</div>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Name</a></h3>
                </div>
                <div class="panel-body">
                    <img class="img-responsive" width="200" src="http://thecatapi.com/api/images/get?format=src&type=gif&guid=@(Guid.NewGuid())">
                    <br />
                    @course.StartDate.ToShortDateString() -@course.EndDate.ToShortDateString()
            </div>
        </div>
    </div>
    }
</div>