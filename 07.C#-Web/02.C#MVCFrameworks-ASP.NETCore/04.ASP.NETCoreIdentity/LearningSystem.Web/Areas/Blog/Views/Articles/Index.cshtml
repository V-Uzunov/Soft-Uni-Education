@model ArticlesListingPageModel
@{
    ViewData["Title"] = "Blog Articles";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6" >
        <ul class="list-group article-list">
            @foreach (var article in Model.Articles)
            {
                <li class="list-group-item">
                    <a asp-action="Details" asp-route-id="@article.Id">
                    @article.Title
                    </a>
                    <br/>
                    <small>Published By @article.Author on @article.PublishDate</small>
                </li>
            }
        </ul>
    </div>
</div>

@if (Model.TotalArticles > Model.Articles.Count())
{
    <ul class="pagination">
        <li class="@(Model.CurrentPage ==1 ? "disabled" : string.Empty)">
            <a asp-controller="Articles" asp-action="Index" asp-route-page="@Model.PreviousPage" aria-lebel="Previous"></a>
            <span aria-hidden="true">&laquo;</span>
        </li>
        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
            <a asp-controller="Articles" asp-action="Index" asp-route-page="@Model.NextPage" aria-lebel="Next"></a>
            <span aria-hidden="true">&raquo;</span>
        </li>
    </ul>
}